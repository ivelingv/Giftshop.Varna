@model Giftshop.Application.Models.CategoryViewModel

@{
    ViewData["Title"] = "Delete";
}


<div class="card">
    <div class="card-header">
        <div class="text-right font-italic">
            <h5 class="float-right">#@Model.Id</h5>
            <h5 class="float-left">Are you sure you want to delete this?</h5>
        </div>
    </div>
    <div class="card-body">
        <div class="col-sm-12">
            <div class="col-sm-2 float-left font-weight-bold">
                @Html.DisplayNameFor(model => model.Id)
            </div>
            <div class="col-sm-10  float-left">
                @Html.DisplayFor(model => model.Id)
            </div>
            <div class="col-sm-2 float-left font-weight-bold">
                @Html.DisplayNameFor(model => model.Title)
            </div>
            <div class="col-sm-10  float-left">
                @Html.DisplayFor(model => model.Title)
            </div>
            <div class="col-sm-2 float-left font-weight-bold">
                @Html.DisplayNameFor(model => model.Description)
            </div>
            <div class="col-sm-10  float-left">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-primary float-left" style="width: 120px">Back to List</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" style="width: 120px" class="btn btn-danger float-right mr-2">Delete</a>
        </form>
    </div>
</div>