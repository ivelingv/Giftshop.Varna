@model Giftshop.Application.Models.CategoryViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <form asp-action="Create" class="card">
        <div class="card-header">
            <div class="text-right font-italic">
                <h5 class="float-right">#@Model.Id</h5>
                <h5 class="float-left">Edit</h5>
            </div>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-2">
                <div class="col-sm-2 float-left pt-2 font-weight-bold ">
                    <label asp-for="Title" class="control-label"></label>
                </div>
                <div class="col-sm-10 float-right">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-2 float-left pt-2 font-weight-bold ">
                    <label asp-for="Description" class="control-label"></label>
                </div>
                <div class="col-sm-10 float-right">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />
                <input type="submit" value="Save" class="btn btn-primary float-right" style="width: 120px" />
                <a asp-action="Index" class="btn btn-primary float-left" style="width: 120px">Back to List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
